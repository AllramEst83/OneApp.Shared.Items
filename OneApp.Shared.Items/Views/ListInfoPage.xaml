<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneApp.Shared.Items.Views.ListInfoPage"
             Title="{Binding List.ListName, StringFormat='Edit {0}'}"
             xmlns:viewmodel="clr-namespace:OneApp.Shared.Items.ViewModels"
             x:DataType="viewmodel:ListInfoViewmodel">

    <StackLayout Margin="10">
        
        <Label 
            Text="New name:"
            FontSize="21"
            FontAttributes="Bold"
            HorizontalOptions="StartAndExpand"
            />

        <Entry 
            FontSize="20"
            Placeholder="Enter list name"
            Text="{Binding NewListName}" 
            HorizontalOptions="FillAndExpand"/>
        
        <Button Text="Save"
                Command="{Binding UpdateListCommand}"
                CommandParameter="{Binding List.Id}"
                 HorizontalOptions="FillAndExpand"
                Margin="10,10,10,10"/>

        <Button Text="Delete"
                Command="{Binding DeleteListCommand}"
                CommandParameter="{Binding List.Id}"
                 HorizontalOptions="FillAndExpand"
                 Margin="10,10,10,10"
                BackgroundColor="{DynamicResource DeleteListButton}"/>
    </StackLayout>
</ContentPage>